    <script>
      
function refreshData(){
    api('positions', null, function(data){
        if(data){
            var count = 0;
            $("#main0").html('');
            $("#main1").html('');
            $("#main2").html('');

            $("#main3").html('');
            for(var i in data){
                //console.log(i);                                                                                                                                               
                var v = data[i];
                $("#main"+((count++)%4)).append("<p><b>"+i+"</b></p>"+
                                 "<span>"+v[0]+"</span><br/>"+
                                 "<span>"+v[1]+"</span><br/>"+
                                 "<p>"+v[2]+"</p>");
            }
        }
    });
}

$(document).ready(function(){
    setInterval(refreshData, 250);
});


    </script>
